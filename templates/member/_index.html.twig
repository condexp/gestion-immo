{% extends 'base.html.twig' %}

{% block title %}Sabbah annonce
{% endblock %}

{% block body %}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success" role="alert">{{ message }}</div>
	{% endfor %}

	<h1>Mes Annonces
	</h1>

	<a href="{{ path('property_new', {'id': app.user.id}) }}">DÃ©poser une annonce
	</a>
	<section class="py-5">
		<div class="container px-2 px-lg-2 mt-2">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

				{%  for bien in propertys %}
					<div class="col mb-5">
						<div class="card h-100">
							{% set count = 0 %}
							{% for image in bien.images %}
								{% set count = count + 1 %}
								{% 	if  count == 1 %}
									<div>
										<img class="card-img-top" src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="150">
									</div>
								{% endif %}
							{% endfor %}
							<div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; left: 0.5rem">{{count}}</div>
							<div class="card-body p-4">
								<div class="text-center">
									<h5 class="fw-bolder">
										<a href="{{ path('property_show', {'id': bien.id}) }}" role="button">{{bien.title}}</a>
									</h5>
									<h5 class="fw-bolder">
										<p>{{bien.description}}</p>
									</h5>
									<h5 class="fw-bolder">
										<p>{{bien.adress}}</p>
									</h5>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
