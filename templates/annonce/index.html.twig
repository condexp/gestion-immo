{% extends 'base.html.twig' %}

{% block title %}Sabbah annonce
{% endblock %}

{% block body %}


	<section class="py-5">
		<div class="container px-2 px-lg-2 mt-2">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

				{%  for bien in property %}


					<div class="col mb-5">
						<div
							class="card h-100">

							<!-- Sale badge-->
							<div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
							<!-- Product image  src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" -->
							{% set count = 0 %}
							{% for image in bien.images %}

								{% set count = count + 1 %}
								{% 	if  count == 1 %}
									<div>
										<img class="card-img-top" src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="150">
									</div>
								{% endif %}


							{% endfor %}
							<div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; left: 0.5rem">{{count}}</div>
							<div class="card-body p-4">
								<div
									class="text-center">
									<!-- Product name-->

									<h5 class="fw-bolder">
										<a href="{{ path('property_show_guest', {'id': bien.id}) }}">{{bien.title}}</a>
									</h5>
									<h5 class="fw-bolder">
										<span>{{bien.price}}
											euro
										</span>
									</h5>
									<h5 class="fw-bolder">
										<span>{{bien.postcode}}
										</span>
										<span>{{bien.city}}
										</span>


									</h5>

									<h5 class="fw-bolder">
										creer:
										<span>{{bien.createdAt | date }}
										</span>
									</h5>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
